<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Events</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <!--<link href="~/Views/Shared/Startpage.css" rel="stylesheet" />-->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!--<link href="~/Views/Shared/Profile.css" rel="stylesheet" />-->
    <script src="~/Scripts/modernizr-2.8.3.js"></script>

</head>
<body>
    <div class="navbar navbar-fixed-top navbarTextiMitten">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("EVENTS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand navbarBrand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav ul-nav navel">
                    <li>@Html.ActionLink("Min profil", "Index", "Profile")</li>
                    <li>@Html.ActionLink("Sparade event", "Index", "SavedEvents")</li> <!-- Vyn är på index på Save-controllern nu! Hittar inte vart man gör dropdown med ul/li-->
                    <li>@Html.ActionLink("Volontärsanmälningar", "Index", "Save")</li> <!--Det är lättare med a href.. Men då kanske inte kollaps funkar-->
                    <li>@Html.ActionLink("Logga in", "LoginUser", "Login")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="container row">
                <div class="customBlock">
                    <p>&copy; @DateTime.Now.Year - Events</p>
                </div>
                <div class="customBlock dropd">
                    @Html.ActionLink("Vill du arrangera ett event?", "", "", new { @class = "dropd" })
                    <!--
                    <br /> <br />
                    <div class="dropdown dropd">
                        <a class="dropdown-toggle dropd" href="#" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Administration
                        </a>
                        <div class="dropdown-menu dropd" aria-labelledby="dropdownMenuLink">
                            <a class="dropdown-item dropd dropdItem" href="#">Systemadministratör</a>
                            <a class="dropdown-item dropd dropdItem" href="#">Eventadministratör</a>
                            <a class="dropdown-item dropd dropdItem" href="#">Bokningsadministratör</a>
                        </div>
                    </div>
                    -->
                </div>
            </div>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>