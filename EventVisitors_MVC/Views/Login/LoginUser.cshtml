@model EventVisitors_MVC.Models.RegistrationClass

@{
    ViewBag.Title = "Inloggning";
}

<h2>Inloggning</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>RegistrationClass</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <!--Html.LabelFor(model => model.Registration_Email, htmlAttributes: new { class = "control-label col-md-2" })-->
        <p class="control-label col-md-2">E-mail: </p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Registration_Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Registration_Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <!--Html.LabelFor(model => model.Registration_Password, htmlAttributes: new { class = "control-label col-md-2" })-->
        <p class="control-label col-md-2">Lösenord: </p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Registration_Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Registration_Password, "", new { @class = "text-danger" })
        </div>
    </div>

  

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Logga in" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Registrera mig", "RegistrationUser", "Registration")
</div>
