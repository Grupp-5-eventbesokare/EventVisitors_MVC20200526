@model IEnumerable<EventVisitors_MVC.Models.EventsClass>

@{
    ViewBag.Title = "Index";
}

@Session["Namn"]

<div class="jumbotron">
    <h1 class="Pagetitle">Dina sparade event</h1>
    <p>Filtrering av Event</p>

    @Html.ActionLink("Alla", "Index", new { selectedCategory = "" }, new { @class = "btn btn-primary", @style = "color:white" })

    @Html.ActionLink("Volontär", "Index", new { selectedCategory = "Volontär" }, new { @class = "btn btn-primary", @style = "color:white" })

</div>
<div class="row">

    @foreach (var item in Model)
    {
        <div class="containerr col-md-3">
            <br />
            <div class="card-body d-flex flex-column">
                <p>
                    @Html.DisplayFor(modelItem => item.Event_Name)
                </p>
                <p>
                    Start: @Html.DisplayFor(modelItem => item.Event_Start_Datetime)
                </p>
                <p>
                    Slut: @Html.DisplayFor(modelItem => item.Event_End_Datetime)
                </p>
                <p>
                    Biljettpris: @Html.DisplayFor(modelItem => item.Event_Ticket_Price)
                </p>
                <p>
                    Arrangör: @Html.DisplayFor(modelItem => item.Event_Organizer.Name)
                </p>
                <p>
                    Event_Id: @Html.DisplayFor(modelItem => item.Event_id)
                </p>

            </div>
            <div class="overlay">
                <p class="text">
                    Mer om eventet:
                    @Html.DisplayFor(modelItem => item.Event_Description)
                    <br />
                    Stad: @Html.DisplayFor(modelItem => item.Event_Facility.Event_Place.City) <!-- Detta verkar inte fungera från EventsClass -->
                    <br />
                    Plats: @Html.DisplayFor(modelItem => item.Event_Facility.Event_Place.Place_Name) <!-- Detta verkar inte fungera från EventsClass -->
                </p>
                <div class="knappOverlay1">

                    @using (Html.BeginForm("AvAnmalan", "SavedEvents", new { eventId = item.Event_id }, FormMethod.Post))
                    {
                        <div><input type="submit" value="Avanmäl dig som besökare" /><br /></div>
                        <div>@Html.ValidationSummary()</div>
                    }
                    <br />
                    @if (item.User_Type.Contains("Volontär") )
                    {
                        using (Html.BeginForm("AvAnmalanVolonter", "SavedEvents", new { eventId = item.Event_id }, FormMethod.Post))
                        {
                            <div><input type="submit" value="Avanmäl dig som volontär" /><br /></div>
                            <div>@Html.ValidationSummary()</div>
                        }
                    }
                </div>

                <!-- OM VI SKA HA DROPPDOWN
                <div class="knappOverlay1">
                <div class="btn-group">
                    <button type="button" class="btn knapp dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Anmälan
                    </button>
                    <div class="dropdown-menu dropdown-menu-left">
                        <button class="dropdown-item" type="button" id="SaveEvent">Spara Event</button>
                        if (item.Event_Active == true)
                        {
                            <button class="dropdown-item" type="button" id="BeVolonteer">Bli Volontär</button>
                        }
                    </div>
                    </div>
                </div>-->

            </div>
        </div>

    }
</div>