                <div class="card-body d-flex flex-column">
                    <p>
                    @Html.DisplayFor(modelItem => item.Event_Name)
                    </p>
                    <p>
                    @Html.DisplayFor(modelItem => item.Event_Imagelink)
                    </p>
                    <p>
                    Start: @Html.DisplayFor(modelItem => item.Event_Start_Datetime)
                    </p>
                    <p>
                    Slut: @Html.DisplayFor(modelItem => item.Event_End_Datetime)
                    </p>
                     <p>
                    Biljettpris: @Html.DisplayFor(modelItem => item.Event_Ticket_Price)
                    </p>
                    <p>
                    Arrangör: Namn på arrangör
                    </p>
                </div>
                <div class="overlay">
                    <p class="text">
                    @Html.DisplayFor(modelItem => item.Event_Description)
                    <br />
                    Plats:
                    </p>
                    <div class="knappOverlay1">
                            <button class="btn knapp" type="submit" value="Submit" id="SaveEvent">Spara Event</button>
                        <br />
