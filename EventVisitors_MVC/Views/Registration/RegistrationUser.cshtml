@model EventVisitors_MVC.Models.ProfilesClass

@{
    ViewBag.Title = "Registrering";
}

    <body style="background-image: url('../../Image/Bakgrund.jpg');">
        <div class="wrapper fadeInDown">
            <div id="formContent">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <h4>Registrering av nytt konto</h4> <br />

                        <div class="loginText">
                            <p>Förnamn: </p>

                            @Html.EditorFor(model => model.Profile_Firstname, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Profile_Firstname, "", new { @class = "text-danger" })

                        </div>

                        <div class="loginText">
                            <p>Efternamn: </p>

                            @Html.EditorFor(model => model.Profile_Lastname, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Profile_Lastname, "", new { @class = "text-danger" })

                        </div>

                        <div class="loginText">
                            <p>Personnummer (xxxx-xx-xx): </p>

                            @Html.EditorFor(model => model.Profile_Birthday, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Profile_Birthday, "", new { @class = "text-danger" })

                        </div>

                        <div class="loginText">
                            <p>Telefonnummer: </p>

                            @Html.EditorFor(model => model.Profile_PhoneNr, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Profile_PhoneNr, "", new { @class = "text-danger" })

                        </div>

                        <div class="loginText">
                            <p>E-mail: </p>

                            @Html.EditorFor(model => model.Profile_Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Profile_Email, "", new { @class = "text-danger" })

                        </div>

                        <div class="loginText">
                            <p>Lösenord: </p>
                            @Html.PasswordFor(model => model.Profile_Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Profile_Password, "", new { @class = "text-danger" })

                        </div> <br /> <br />

                        <div class="text-center">

                            <input type="submit" value="Registrera mig" class="btn brown" />

                        </div>
                        <br />
                    </div>
                }

                <div id="formFooter">
                    @Html.ActionLink("Redan registrerad?", "LoginUser", "Login")
                </div>

            </div>
        </div>
    </body>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
